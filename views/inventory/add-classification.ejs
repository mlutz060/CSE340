<% if (title) { %>
    <h1><%= title %></h1>
    <% } else {} %>


<% if (message) { %>
    <p class="notice"><%= message %></p>
    <% } %>

<div id="add-classification">
    <fieldset>
        <form action="/inv/add-classification" method="post">
            <label for="classification_data">Classification Name
                <span>Name may NOT contain a space or special 
                    character of any kind</span>
            </label>
            <input id="classification_data" name="classification_data" type="text [A-Za-z]">
            <button type="submit">Add Classification</button>
        </form>
    </fieldset>
</div>