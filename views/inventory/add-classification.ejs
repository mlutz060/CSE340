<% if (title) { %>
    <h1><%= title %></h1>
    <% } else {} %>


<% if (message) { %>
    <p class="notice"><%= message %></p>
    <% } %>

<div id="add-classification">
    <fieldset>
        <form class="add-form" action="/inv/add-classification" method="post">
            <label for="classification_name">Classification Name
                <span>Name may NOT contain a space or special 
                    character of any kind</span>
            </label>
            <br>
            <input id="classification_name" name="classification_name" type="text (/^[A-Za-z]+$/)">
            <button type="submit">Add Classification</button>
        </form>
    </fieldset>
</div>