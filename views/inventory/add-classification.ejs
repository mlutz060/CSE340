<% if (title) { %>
    <h1><%= title %></h1>
    <% } else { res.redirect("/")} %>

<% if (message) { %>
    <p class="notice"><%= message %></p>
    <% } %>

<div id="add-classification">
    <fieldset>
        <form action="/controllers/invController.js" method="post">
            <label for="Classification">Classification Name
                <span>Name may NOT contain a space or special 
                    character of any kind</span>
            </label>
            <input type="text [A-Za-z]">
            <button type="submit">Add Classification</button>
        </form>
    </fieldset>
</div>