<% if (title) { %>
    <h1><%= title %></h1>
    <% } else { res.redirect("/")} %>

<% if (message) { %>
    <p class="notice"><%= message %></p>
    <% } %>

<div id="loginForm">
  <form id="loginForm" action="/client/login" method="post">
    <label for="username">Username:</label>
    <br>
    <input name="client_username" class="input" require type="text" id="username" placeholder="user123abc">
    <br>
    <label for="password">Password:</label>
    <br>
    <input name="client_password" class="input" require type="text" id="password">
    <br>
    <button type="submit" id="loginbtn" href="">Login</button>
    <h1>No account? <span><a href="/">Sign up</a></span></h1>
  </form>
</div>