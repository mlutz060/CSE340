<% if (title) { %>
    <h1><%= title %></h1>
    <% } else { res.redirect("/")} %>

<% if (message) { %>
    <p class="notice"><%= message %></p>
    <% } %>

<div class="clientForm">
  <form class="add-form" action="/client/login" method="post">
    <label for="email">Email:</label>
    <br>
    <input name="client_email" require type="email" id="email">
    <br>
    <label for="password">Password:</label>
    <br>
    <input name="client_password" require type="text" id="password">
    <br>
    <button type="submit" class="formbtn" href="/client/login">Login</button>
  </form>
</div>
<div>
  <h1>No account?</h1>
  <h3><a href="/client/register"><button id="signupbtn">Sign up Here!</button></a></h3>
</div>